                    <TextBlock Text="CALENDARIO"
                               HorizontalAlignment="Center"/>
                    <StackPanel  Orientation="Horizontal" 
                                 HorizontalAlignment="Center">
                        
                        <TextBlock Text="Mes: "/>
                        <TextBlock Text="11"/>
                        <TextBlock Text="Año: "/>
                        <TextBlock Text="1"/>
                    </StackPanel>
