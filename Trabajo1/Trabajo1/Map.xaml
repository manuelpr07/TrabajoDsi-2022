                                DragEnter="DropBorder_DragEnter" Drop="DropBorder_Drop" AllowDrop="True">
                            <Button x:Name="DropButtonK2" Click="eraseTarget" Style="{StaticResource ButtonTarget}">
                                <Image x:Name="DropImageK2" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                            </Button>
                        </Border>
                        <Border x:Name="DropBorderK3" Style="{StaticResource DragDropTarget}"
                                DragEnter="DropBorder_DragEnter" Drop="DropBorder_Drop" AllowDrop="True">
                            <Button x:Name="DropButtonK3" Click="eraseTarget" Style="{StaticResource ButtonTarget}">
                                <Image x:Name="DropImageK3" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                            </Button>
                        </Border>
                        <Border x:Name="DropBorderK4" Style="{StaticResource DragDropTarget}"
                                DragEnter="DropBorder_DragEnter" Drop="DropBorder_Drop" AllowDrop="True">
                            <Button x:Name="DropButtonK4" Click="eraseTarget" Style="{StaticResource ButtonTarget}">
                                <Image x:Name="DropImageK4" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                            </Button>
                        </Border>
                        <Border x:Name="DropBorderK5" Style="{StaticResource DragDropTarget}"
                                DragEnter="DropBorder_DragEnter" Drop="DropBorder_Drop" AllowDrop="True">
                            <Button x:Name="DropButtonK5" Click="eraseTarget" Style="{StaticResource ButtonTarget}">
                                <Image x:Name="DropImageK5" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                            </Button>
                        </Border>

                        <Border x:Name="DropBorderK6" Style="{StaticResource DragDropTarget}"
                                DragEnter="DropBorder_DragEnter" Drop="DropBorder_Drop" AllowDrop="True">
                            <Button x:Name="DropButtonK6" Click="eraseTarget" Style="{StaticResource ButtonTarget}">
                                <Image x:Name="DropImageK6" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                            </Button>
                        </Border>
                        <Border x:Name="DropBorderK7" Style="{StaticResource DragDropTarget}"
                                DragEnter="DropBorder_DragEnter" Drop="DropBorder_Drop" AllowDrop="True">
                            <Button x:Name="DropButtonK7" Click="eraseTarget" Style="{StaticResource ButtonTarget}">
                                <Image x:Name="DropImageK7" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                            </Button>
                        </Border>
                        <Border x:Name="DropBorderK8" Style="{StaticResource DragDropTarget}"
                                DragEnter="DropBorder_DragEnter" Drop="DropBorder_Drop" AllowDrop="True">
                            <Button x:Name="DropButtonK8" Click="eraseTarget" Style="{StaticResource ButtonTarget}">
                                <Image x:Name="DropImageK8" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                            </Button>
                        </Border>
                        <Border x:Name="DropBorderK9" Style="{StaticResource DragDropTarget}"
                                DragEnter="DropBorder_DragEnter" Drop="DropBorder_Drop" AllowDrop="True">
                            <Button x:Name="DropButtonK9" Click="eraseTarget" Style="{StaticResource ButtonTarget}">
                                <Image x:Name="DropImageK9" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                            </Button>
                        </Border>
                        <Border x:Name="DropBorderK10" Style="{StaticResource DragDropTarget}"
                                DragEnter="DropBorder_DragEnter" Drop="DropBorder_Drop" AllowDrop="True">
                            <Button x:Name="DropButtonK10" Click="eraseTarget" Style="{StaticResource ButtonTarget}">
                                <Image x:Name="DropImageK10" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                            </Button>
                        </Border>
                        <Border x:Name="DropBordeK11" Style="{StaticResource DragDropTarget}"
                                DragEnter="DropBorder_DragEnter" Drop="DropBorder_Drop" AllowDrop="True">
                            <Button x:Name="DropButtonK11" Click="eraseTarget"  Style="{StaticResource ButtonTarget}">
                                <Image x:Name="DropImageK11" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                            </Button>
                        </Border>
                    </GridView>
