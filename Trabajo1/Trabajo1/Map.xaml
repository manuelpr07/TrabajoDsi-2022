                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Center">
                        <TextBlock x:Name="mesT"
                                   Text="Mes: "/>
                        <TextBlock Text="11"
                                   x:Name="mes"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Grid.Column="2"
                                HorizontalAlignment="Center">
                        <TextBlock Text="Año: "
